<p id="notice"><%= notice %></p>

<h1>Article Users</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th>User</th>
      <th>Is owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_users.each do |article_user| %>
      <tr>
        <td><%= article_user.article %></td>
        <td><%= article_user.user %></td>
        <td><%= article_user.is_owner %></td>
        <td><%= link_to 'Show', article_user %></td>
        <td><%= link_to 'Edit', edit_article_user_path(article_user) %></td>
        <td><%= link_to 'Destroy', article_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

