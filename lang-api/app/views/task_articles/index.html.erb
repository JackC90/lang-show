<p id="notice"><%= notice %></p>

<h1>Task Articles</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_articles.each do |task_article| %>
      <tr>
        <td><%= task_article.article %></td>
        <td><%= task_article.task %></td>
        <td><%= link_to 'Show', task_article %></td>
        <td><%= link_to 'Edit', edit_task_article_path(task_article) %></td>
        <td><%= link_to 'Destroy', task_article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

